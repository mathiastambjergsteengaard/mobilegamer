.pull-left= link_to "New tag", new_tag_path, class: "btn btn-default"
= link_to "Go to games", games_path, class: "btn btn-default"
.clear
- @tags.each do |tag|
  .panel
    .panel-body
      = tag.name
      = link_to "Edit tag", edit_tag_path(tag), class: "btn btn-default"
      = link_to "Delete tag", tag_path(tag), method: :delete, class: "btn btn-default confirm"

:javascript
  $(function() {
      $('.confirm').click(function() {
        return window.confirm("Are you sure you want to delete this tag");
      });
    });