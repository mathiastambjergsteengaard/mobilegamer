.container
  .new_game_button_container
    = link_to "New game recommendation", game_path(@game), class: "btn btn-default btn-lg new_game_button"
  .row
    .col-xs-8
      %h3= @game.name
    .col-xs-4
      %h4= @game.genre + " - " + (@game.online ? "Online" : "Offline")
  .clear
  %iframe#youtube{:allowfullscreen => "", :frameborder => "0", :src => "https://www.youtube.com/embed/a23yh4rGNOE"}
  .row
    .col-xs-6
      = link_to image_tag("play_store_badge.png"), @game.android_download_links, class: "android_badge"
    .col-xs-6
      = link_to image_tag("app_store_badge.png"), @game.ios_download_links, class: "ios_badge"
  .review_container
    = @game.review
