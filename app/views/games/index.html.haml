.pull-left= link_to "New game", new_game_path, class: "btn btn-default"
= link_to "Go to tags", tags_path, class: "btn btn-default"
.clear
- @games.each do |game|
  .panel
    .panel-body
      = game.name
      = link_to "Edit game", edit_game_path(game), class: "btn btn-default"
      = link_to "Delete game", game_path(game), method: :delete, class: "btn btn-default confirm"

:javascript
  $(function() {
      $('.confirm').click(function() {
        return window.confirm("Are you sure you want to delete this game");
      });
    });